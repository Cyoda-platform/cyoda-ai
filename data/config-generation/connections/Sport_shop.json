{
    "openapi": "3.0.3",
    "info": {
      "title": "Sports Shop API version 92ea0711-348b-4db4-9aad-b10bb0c78bcb",
      "version": "92ea0711-348b-4db4-9aad-b10bb0c78bcb",
      "description": "API for interacting with the Sports Shop"
    },
    "paths": {
      "/products": {
        "get": {
          "summary": "Get a list of products",
          "description": "Returns a list of available sports products",
          "parameters": [
            {
              "name": "category",
              "in": "query",
              "description": "Filter products by category (e.g., basketball, soccer)",
              "required": false,
              "schema": {
                "type": "string"
              }
            },
            {
              "name": "limit",
              "in": "query",
              "description": "Limit the number of products returned",
              "required": false,
              "schema": {
                "type": "integer"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "A list of products",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer"
                        },
                        "name": {
                          "type": "string"
                        },
                        "category": {
                          "type": "string"
                        },
                        "price": {
                          "type": "number",
                          "format": "float"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/product/{id}": {
        "get": {
          "summary": "Get product details",
          "description": "Returns details of a specific product by ID",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "description": "ID of the product to retrieve",
              "required": true,
              "schema": {
                "type": "integer"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Product details",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "name": {
                        "type": "string"
                      },
                      "category": {
                        "type": "string"
                      },
                      "price": {
                        "type": "number",
                        "format": "float"
                      },
                      "description": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "404": {
              "description": "Product not found"
            }
          }
        }
      },
      "/product/add": {
        "post": {
          "summary": "Add a new product",
          "description": "Adds a new product to the catalog",
          "requestBody": {
            "description": "Product to add",
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "category": {
                      "type": "string"
                    },
                    "price": {
                      "type": "number",
                      "format": "float"
                    },
                    "description": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Product created successfully",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "name": {
                        "type": "string"
                      },
                      "category": {
                        "type": "string"
                      },
                      "price": {
                        "type": "number",
                        "format": "float"
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Invalid input"
            }
          }
        }
      }
    }
  }
  